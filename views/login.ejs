<%- include('header') %>
        <h3><%= title %></h3>
        <div>
            <% if (source === 'signup') { %>
                <p><a href="/login">Already have an account? Log in</a></p>
                <form action="/signup" method="POST">
                    <label>Username:</label><br>
                    <input name="signup_username" required><br>
                    <label>E-mail:</label><br>
                    <input name="signup_email" type="email" required><br>
                    <label>Password:</label><br>
                    <input type="password" name="signup_password" required><br><br>
                    <input type="submit" value="Sign up">
                </form>

            <% } else { %>

                <p><a href="/signup">Sign Up</a></p>
                <form action="/login" method="POST">
                    <p>
                        E-mail : <input type="email" name="login_email">
                        Password : <input type="password" name="login_password">
                    </p>
                    <input type="submit" value="Login">
                </form>
                    <p class="error"><%= error %></p>

            <% } %>
        </div>
<%- include('footer') %>