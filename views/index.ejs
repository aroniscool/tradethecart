<%- include('header') %>

<div>
    <h3>Welcome <%= name %>!</h3>
    <% if (authen) { %>
        <nav>
            <a class="button" id="special" href="/add">Add trading card!</a> |
            <a href="/member?id=<%= authen %>">Your cards</a>
        </nav>
    <% } else { %>
        <nav>
            <a class="button" href="/login">Login</a>
        </nav>
    <% } %>
    <h4 class="center">Sets</h4>
    <p class="center">Explore the available Pok√©mon card sets. Click on a set to view more details.</p>
    <div class="set-grid center">
        <% sets.forEach((set) => { %>
            <div class="set-item">
                <a href="/set?id=<%= set.set_id %>"><img class="center" src="<%= set.set_image %>" alt="Image of <%= set.set_name %>"></a>
            </div>
        <% }); %>
    </div>
    <div class="center">
        <h4>Members</h4>
        <p>Connect with other members and explore their collections. Click on a member's name to view their cards.</p>
        <table class="center">
            <thead></thead>
            <tbody>
                <% users.forEach((user) => { %>
                    <tr>
                        <td><a href="/member?id=<%= user.user_id %>"><%= user.username %></a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>    
</div>
<%- include('footer') %>